<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Mageplaza_Core::css/grid-mageplaza.css"/>
        <css src="Mageplaza_Core::css/font-awesome.min.css"/>
        <css src="Mageplaza_Core::css/owl.carousel.css"/>
        <css src="Mageplaza_Core::css/owl.theme.css"/>
        <css src="Hyva_MageplazaBlog::css/hyvaBlog.css"/>
    </head>
    <body>
        <referenceContainer name="columns">
            <container name="div.sidebar.main" htmlTag="div" htmlClass="sidebar sidebar-main" before="main">
                <container name="blog.sidebar.main" as="sidebar_main" label="Sidebar Main">
                    <block class="Mageplaza\Blog\Block\Sidebar\Search" name="mpblog.sidebar.search" template="Hyva_MageplazaBlog::sidebar/search.phtml" ifconfig="blog/sidebar/search/enable_search"/>
                    <block class="Mageplaza\Blog\Block\Sidebar\MostView" name="mpblog.sidebar.mostview" template="Hyva_MageplazaBlog::sidebar/mostview.phtml" ifconfig="blog/sidebar/recent_post/enable_widget"/>
                    <block class="Mageplaza\Blog\Block\Category\Widget" name="mpblog.sidebar.category" template="Hyva_MageplazaBlog::category/widget.phtml"/>
                    <block class="Mageplaza\Blog\Block\MonthlyArchive\Widget" name="mpblog.sidebar.monthly" template="Hyva_MageplazaBlog::monthly/widget.phtml"/>
                    <block class="Mageplaza\Blog\Block\Topic\Widget" name="mpblog.sidebar.topic" template="Hyva_MageplazaBlog::topic/widget.phtml"/>
                    <block class="Mageplaza\Blog\Block\Tag\Widget" name="mpblog.sidebar.tag" template="Hyva_MageplazaBlog::tag/widget.phtml"/>
                </container>
            </container>
        </referenceContainer>

    </body>
</page>
